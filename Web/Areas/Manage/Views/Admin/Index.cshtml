@model IEnumerable<WZ.Common.Model.Menu>
@using Microsoft.AspNet.Identity
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<!DOCTYPE html>

<html>
<head>
    meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit|ie-comp|ie-stand" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <title>后台管理</title>
    <!--[if lt IE 9]>
    <script type="text/javascript" src="/lib/html5.js"></script>
    <script type="text/javascript" src="/lib/respond.min.js"></script>
    <script type="text/javascript" src="/lib/PIE_IE678.js"></script>
    <![endif]-->
    <link href="/static/h-ui/css/H-ui.css" rel="stylesheet" type="text/css" />
    <link href="/static/h-ui/css/H-ui.admin.css" rel="stylesheet" type="text/css" />
    <link href="/lib/Hui-iconfont/1.0.7/iconfont.css" rel="stylesheet" type="text/css" />
    <link href="/static/h-ui/skin/default/skin.css" rel="stylesheet" type="text/css" id="skin" />
    <link href="/static/h-ui/css/style.css" rel="stylesheet" type="text/css" />
